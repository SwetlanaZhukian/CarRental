@model IEnumerable<CarRental.Models.ViewModels.OrderViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список заказов</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <table class="table  table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Номер заказа</th>
                <th scope="col">Имя пользователя</th>
                <th scope="col">Начало проката </th>
                <th scope="col">Конец проката</th>
                <th scope="col">Марка автомобиля</th>
                <th scope="col">Модель автомобиля</th>
                <th scope="col">Стоимость проката</th>
                <th scope="col">Комментарий</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
            <tr>
                <td>@order.Id</td>
                <td>@order.Name</td>
                <td>@order.Start</td>
                <td>@order.End</td>
                <td>@order.Mark</td>
                <td>@order.Model</td>
                <td>@order.Price</td>
                <td>@order.Comment</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>